<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TraceRunApp.ChargeRoutes"
             Title="ChargeRoutes">

    <Grid Padding="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- Lista de Rotas com Scroll -->
        <ScrollView Grid.Row="1">
            <VerticalStackLayout
                x:Name="RoutesLayout"
                Spacing="12"
                Padding="0,10"
                WidthRequest="360"
                HorizontalOptions="Center">
            </VerticalStackLayout>
        </ScrollView>
    </Grid>

</ContentPage>
